---
import { getAlternateLinks, getCurrentLocale, createTranslationFunction, loadTranslations } from '../i18n/utils';

interface Props {
    title?: string;
    description?: string;
    titleKey?: string;
    descriptionKey?: string;
    noindex?: boolean;
    pageTransitionName?: string;
}

const { title, description, titleKey, descriptionKey, noindex, pageTransitionName } = Astro.props;

const currentLocale = getCurrentLocale(Astro);

// Load translations
await loadTranslations();

// Create translation function for current locale
const t = createTranslationFunction(currentLocale);

// Determine title and description using translation keys or fallback to props
const newTitle = titleKey ? t(titleKey) : (title || t('meta.default_title'));
const newDescription = descriptionKey ? t(descriptionKey) : (description || t('meta.default_description'));

const domain = "https://hangzhou2025.gosim.org";

const slug = Astro.url.pathname || '/';

// Get the path without locale prefix for alternate links
const pathWithoutLocale = currentLocale === 'en' 
  ? slug 
  : (slug.replace(`/${currentLocale}`, '') || '/');

// Generate alternate language links
const alternateLinks = getAlternateLinks(pathWithoutLocale);

---

<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width" />
<meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1" />

<!-- Language and alternate links -->
{alternateLinks.map(({ href, hreflang }) => (
  <link rel="alternate" hreflang={hreflang} href={href} />
))}
<link rel="alternate" hreflang="x-default" href={alternateLinks.find(link => link.locale === 'en')?.href} />

<title>{newTitle}</title>
<meta name="title" content={newTitle}/>
<meta property="og:title" content={newTitle}/>
<meta property="twitter:title" content={newTitle}/>

<meta property="og:site_name" content={t('meta.site_name')} />
<meta property="twitter:card" content="summary_large_image" />

<link rel="canonical" href={`${domain}${slug}`} />
<meta property="og:url" content={`${domain}${slug}`} />
<meta property="twitter:url" content={`${domain}${slug}`} />

<link rel="sitemap" href={`${domain}/sitemap-index.xml`} />

<meta property="og:type" content="website" />

{noindex && 
   <meta name="robots" content="noindex">
}

<link rel="preload" href="/fonts/inter-v18-latin-500.woff2" as="font" type="font/woff2" crossorigin="anonymous" />

<link rel="icon" href="/images/favicon-gosim.png" type="image/svg+xml">

<meta property="og:image" content="/images/thumbnail.jpg" />
<meta property="twitter:image" content="/images/thumbnail.jpg" />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="800" />

<meta name="description" content={newDescription} />
<meta property="og:description" content={newDescription} />
<meta property="twitter:description" content={newDescription} />

{pageTransitionName === "Home" &&
    <link rel="prefetch" href="/videos/hz-hero-bk.png" as="image" type="image/webp" />
    <link rel="prefetch" href="/videos/hangzhou-hero-video.webm" as="video" type="video/webm" />
}