---
// Components
import Layout from "layouts/LayoutLanding.astro";
import Hero from "components/Hero.astro";
import Intro from "components/Intro.astro";
import Statistics from "components/Statistics.astro";
import Tracks from "components/Tracks.astro";
import TextAndImage from "components/TextAndImage.astro";
import PreviousEvents from "components/PreviousEvents.astro";
import GetTickets from "components/GetTickets.astro";
import VenueInfo from "components/VenueInfo.astro";
import TextAndSponsors from "components/TextAndSponsors.astro";
import TextAndImageReverse from "components/TextAndImageReverse.astro";
import FeaturedSpeakers from "components/FeaturedSpeakers.astro";
import Timeline from "components/Timeline.astro";
import Marquee from "components/Marquee.astro";
import Cards from "components/Cards.astro";

// i18n utilities
import { getCurrentLocale, createTranslationFunction, loadTranslations } from "../../i18n/utils";

// Load translations
await loadTranslations();

// Force Chinese locale for this page
const currentLocale = 'zh';
const t = createTranslationFunction(currentLocale);

// Images
import Placeholder1 from "images/homepage/stats1.jpeg";
import Placeholder2 from "images/homepage/stats2.jpg";
import Placeholder3 from "images/homepage/stats3.png";
import SpotlightBlue from "images/homepage/spotlight-hg.svg";
import Proposals from "images/homepage/hangzhou-proposals-min.jpg";

import GosimShanghai from "images/homepage/gosim-shanghai.png";
import GosimDelft from "images/homepage/gosim-delft.png";
import GosimBeijing from "images/homepage/gosim-beijing.png";
import GosimParis from "images/homepage/gosim-paris-min.png";
---

<Layout
  title={t('homepage.hero.title')}
  description={t('homepage.hero.subtitle')}
  navDarkMode={true}
  navBackground="header-home"
  pageTransitionName="Home"
>
  <Hero
    date={t('homepage.hero.date')}
    location={t('homepage.hero.location')}
    links={[
      {
        text: t('homepage.hero.call_for_proposals'),
        link: "/#proposals",
        openInNewTab: false,
      },
    ]}
  />
  <div
    class="section-wrap"
    id="intro"
    data-theme-section="light"
    data-bg-section="lightgray"
  >
    <Intro>
      <h1 class="h3 light split-words animate-read">
        {t('homepage.intro.title')}
      </h1>
    </Intro>

    <Statistics
      stats={[
        {
          title: "1500",
          subtitle: t('homepage.statistics.attendees'),
          image: Placeholder1,
          imageAlt: "",
          hasPlus: true,
        },
        {
          title: "100",
          subtitle: t('homepage.statistics.speakers'),
          imageAlt: "",
          image: Placeholder2,
          hasPlus: true,
        },
        {
          title: "2",
          subtitle: t('homepage.statistics.days'),
          imageAlt: "",
          image: Placeholder3,
        },
      ]}
    />
  </div>

  <Tracks
    id="tracks"
    title={t('homepage.tracks.title')}
    list={[
      {
        title: t('homepage.tracks.ai_models'),
        text: t('homepage.tracks.ai_models_desc'),
      },
      {
        title: t('homepage.tracks.embodied_ai'),
        text: t('homepage.tracks.embodied_ai_desc'),
      },
      {
        title: t('homepage.tracks.agentic_web'),
        text: t('homepage.tracks.agentic_web_desc'),
      },
      {
        title: t('homepage.tracks.apps_agents'),
        text: t('homepage.tracks.apps_agents_desc'),
      },
      {
        title: t('homepage.tracks.ai_next'),
        text: t('homepage.tracks.ai_next_desc'),
      },
    ]}
    ctaButton={{
      text: t('homepage.tracks.schedule_coming_soon'),
      link: "",
    }}
  />

  <VenueInfo
    subtitle={t('homepage.venue.subtitle')}
    title={t('homepage.venue.title')}
    location={t('homepage.venue.location')}
    text={t('homepage.venue.description')}
    image="/images/homepage/hangzhoubg.png"
  />

  <Marquee />

  <FeaturedSpeakers
    title={t('speakers.title')}
    ctaButton={{
      text: t('speakers.more_speakers'),
      link: "/zh/speakers/",
    }}
  />

  <TextAndImageReverse
    id="proposals"
    title={t('homepage.proposals.title')}
    text={t('homepage.proposals.description')}
    image={Proposals}
    imageAlt="GOSIM Hangzhou"
    dataBgSection="light"
    dataThemeSection="light"
    ctaButton={{
      text: t('homepage.proposals.apply_now'),
      link: "https://cfp.gosim.org/",
      openInNewTab: true,
    }}
  />
  <Timeline
    events={[
      {
        date: "May 18, 2025",
        title: t('homepage.timeline.proposal_open'),
      },
      {
        date: "August 18, 2025",
        title: t('homepage.timeline.proposal_close'),
      },
      {
        date: "September 13, 2025",
        title: t('homepage.timeline.event_start'),
      },
      {
        date: "September 14, 2025",
        title: t('homepage.timeline.event_end'),
      },
    ]}
  />

  <Cards
    id="co-located-events"
    title={t('homepage.co_located_events.title')}
    description={t('homepage.co_located_events.description')}
    cards={[
      {
        title: t('homepage.co_located_events.rust_global'),
        description: t('homepage.co_located_events.rust_global_desc'),
        image: ["/images/homepage/rust-global-logo.svg","/images/homepage/RustChinaConf-hangzhou-black.svg"],
        link: "https://rustcc.cn/2025conf/",
        openInNewTab: false,
      },
      {
        title: t('homepage.co_located_events.ai_vision'),
        description: t('homepage.co_located_events.ai_vision_desc'),
        image: "/images/homepage/co-located-ai-vision.png",
        link: "https://forum.gosim.org/en/",
        openInNewTab: false,
      },
      {
        title: t('homepage.co_located_events.open_sdg'),
        description: t('homepage.co_located_events.open_sdg_desc'),
        image: "/images/homepage/co-located-open-sdg.jpg",
        link: "https://opensdg.gosim.org/en/",
        openInNewTab: false,
      },
      {
        title: t('homepage.co_located_events.super_agent'),
        description: t('homepage.co_located_events.super_agent_desc'),
        image: "/images/homepage/co-located-super-agent.png",
        link: "https://mofa.ai/super-agent-hackathon/",
        openInNewTab: false,
      },
      {
        title: t('homepage.co_located_events.code_alert'),
        description: t('homepage.co_located_events.code_alert_desc'),
        image: "/images/homepage/co-located-code-alert.png",
        link: "https://hackathon.mofa.ai",
        openInNewTab: false,
      },
    ]}
  />

  <TextAndSponsors
    title={t('homepage.sponsorship.title')}
    text={t('homepage.sponsorship.description')}
    text2={t('homepage.sponsorship.disclaimer')}
    ctaButton={{
      text: t('homepage.sponsorship.contact_us'),
      link: "mailto:sponsor@gosim.org",
    }}
    logos={[
      {
        image: "openwallet.png",
        imageAlt: "OpenWallet logo",
      },
      {
        image: "ajtis.jpg",
        imageAlt: "AJTIS logo",
      },
      {
        image: "aifc.png",
        imageAlt: "AIFC logo",
      },
      {
        image: "lf-gen-ai.png",
        imageAlt: "Linux Foudnation logo",
      },
      {
        image: "eclipse-foundation.png",
        imageAlt: "Eclipse Foundation logo",
      },
      {
        image: "osi.png",
        imageAlt: "Open Source Initiative logo",
      },
    ]}
  />
  
  <TextAndImage
    id="spotlight"
    title={t('homepage.spotlight.title')}
    text={t('homepage.spotlight.description')}
    image={SpotlightBlue}
    imageAlt="Gosim Spotlight badge"
    dataBgSection="light"
    dataThemeSection="light"
    ctaButton={{
      text: t('homepage.spotlight.apply_nominate'),
      link: "https://spotlight.gosim.org/",
      openInNewTab: true,
    }}
  />

  <PreviousEvents
    title={t('homepage.previous_events.title')}
    events={[
      {
        title: t('homepage.previous_events.paris_title'),
        date: "May 6-7, 2025",
        description: t('homepage.previous_events.paris_desc'),
        image: GosimParis,
        link: "https://paris2025.gosim.org/",
      },
      {
        title: t('homepage.previous_events.beijing_title'),
        date: "October 17-18, 2024",
        description: t('homepage.previous_events.beijing_desc'),
        image: GosimBeijing,
        link: "https://china2024.gosim.org/",
      },
      {
        title: t('homepage.previous_events.delft_title'),
        date: "June 6-7, 2024",
        description: t('homepage.previous_events.delft_desc'),
        image: GosimDelft,
        link: "https://europe2024.gosim.org/",
      },
      {
        title: t('homepage.previous_events.shanghai_title'),
        date: "September 23-24, 2023",
        description: t('homepage.previous_events.shanghai_desc'),
        image: GosimShanghai,
        link: "https://conference2023.gosim.org/",
      },
    ]}
  />
  <GetTickets
    title={t('homepage.get_tickets.title')}
    location={t('homepage.hero.location')}
    date={t('homepage.hero.date')}
    text={t('homepage.get_tickets.description')}
    ctaButton={{
      text: "Get tickets",
      link: "/zh/tickets",
      openInNewTab: false,
    }}
  />
</Layout>